<%- include ('../partials/head.ejs'); %>
<div class="container-xxl position-relative bg-white d-flex p-0">
<%- include ('../layouts/spinner.ejs'); %>
<%- include ('../layouts/sidebar.ejs'); %>

<div class="content">
    <%- include ('../layouts/navbar.ejs'); %>

    <div class="container-fluid pt-4 px-4 border">
        <div class="card overflow-auto" style="height: 75vh; max-height: 76vh;">
            <div class="card-header bg-light">
                Buscar Personas
            </div>
            <div class="card-body">
                <div class="accordion accordion-flush border" id="accordionFlushExample">
                    <div class="accordion-item">
                      <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                          Filtros
                        </button>
                      </h2>
                      <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <form class="row g-3 needs-validation" id="formPerson">
                                <div class="col-4 position-relative">
                                  <label for="validationTooltip01" class="form-label">DNI</label>
                                  <input type="number" class="form-control" id="dni" >
                                </div>
                                <div class="col-4 position-relative">
                                  <label for="validationTooltip02" class="form-label">Apellido</label>
                                  <input type="text" class="form-control" id="lastname" >
                                </div>
                                <div class="col-4 position-relative">
                                  <label for="validationTooltipUsername" class="form-label">Nombre</label>
                                  <div class="input-group has-validation">
                                    <input type="text" class="form-control" id="name" aria-describedby="validationTooltipUsernamePrepend" >
                                  </div>
                                </div>
                                <div class="col-4 position-relative">
                                  <label for="validationTooltip03" class="form-label">Domicilio</label>
                                  <input type="text" class="form-control" id="address" >
                                </div>
                                <div class="col-12">
                                  <button class="btn btn-primary" type="submit">Buscar</button>
                                  <button class="btn btn-secondary">Borrar Campos</button>
                                </div>
                              </form>
                        </div>    
                      </div>
                    </div>
                  </div>
                <div class="table-responsive">
                    <table class="table table-hover table-striped small table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>dni</th>
                                <th>Apellido</th>
                                <th>Nombre</th>
                                <th>Domicilio</th>
                                <th>Clase</th>
                                <th>Registro</th>
                            </tr>
                        </thead>
                        <tbody id="registers">
                            <tr>
                                <td class="text-center alert alert-warning" colspan="6">Ingrese un patr√≥n de busqueda para continuar</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script
    src="/js/person/filters.js"
    ></script>

    <%- include ('../layouts/footer.ejs'); %>
</div>

</div>
<%- include ('../partials/bottom.ejs'); %>

